<div class = "sign-up-body">
  <%= link_to root_path do %>
   <i class="fas fa-arrow-left"></i>
  <% end %>
  <div class="card card-signin">
<h1>Complete Your Profile</h1>

<%= simple_form_for @user, url: update_profile_path, method: :patch do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :first_name,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "First Name" }%>
    <%= f.input :last_name,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "Last Name" }%>
    <%= f.input :birthdate,
                as: :date,
                html5: true,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "Birthdate" }%>
    <%= f.country_select :nationality,
                label: "Country",
                input_html: { class: "select2" } %>
    <%= f.input :is_teacher,
                as: :boolean,
                label: "Are you a teacher?",
                required: true,
                autofocus: true,
                input_html: { autocomplete: "teacher" }%>
    <%= f.input :description,
                as: :text,
                label: "Bio (optional)",
                autofocus: true,
                input_html: { autocomplete: "bio" }%>
    <%= f.input :profilephoto,
                label: "Profile Photo (optional)",
                autofocus: true,
                input_html: { autocomplete: "photo" }%>
    <%= f.input :coverphoto,
                label: "Cover Photo (optional)",
                autofocus: true,
                input_html: { autocomplete: "photo" }%>
    <%= f.input :tags,
                as: :string,
                label: "Interests (optional)",
                autofocus: true,
                input_html: { autocomplete: "interests" }%>
</div>
  <%= f.button :submit %>

<% end %>
</div>
</div>

