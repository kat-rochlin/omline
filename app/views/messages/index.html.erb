  <div class="row">
    <div class="col-4">
      Conversations
      <% @conversations.each do |friend| %>
      <div class="card">
        <div class="card-body d-flex justify-content-between">
          <p>First Name <%= friend.first_name %></p>
          <%= link_to "Chat", user_connection_messages_path(@user_connection), class:"btn-sm-white" %>
        </div>
      </div>

      <% end %>
    </div>
    <div class="col-8">
      <div class="message">
      <%= simple_form_for([@user_connection, @message]) do |f| %>
        <%= f.input :content %>
        <%= f.submit %>
      <% end %>
      </div>
    </div>
  </div>

