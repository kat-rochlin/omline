<div class=”insert-message”>
  <% @messages.each do |message| %>
   <% if message.content %>
    <% user = User.find(message.user_id) %>
    <div class=”item”>
     <div class=”content”>
      <div class=”header”><strong><%= user.first_name %></strong>    <%= message.message_time %></div>
       <div class=”list”>
        <div class=”item”>
         <i class=”right triangle icon”></i>
          <%= message.content %>
       </div>
     </div>
    </div>
  </div>
  <% end %>
 <% end %>
</div>
