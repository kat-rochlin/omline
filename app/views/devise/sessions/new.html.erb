<div class = "sign-up-body"><%= link_to root_path do %>
  <i class="fas fa-arrow-left"></i><% end %>
  <div class="card card-signin flex-row my-5">
    <div class="card-img-left d-none d-md-flex">
      <!-- Background image for card set in CSS! -->
    </div>
    <div class="card-body">
      <h5 class="card-title text-center">Log In</h5><%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <div class="form-label-group"><%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
        </div>
        <div class="form-label-group"><%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" } %>
        </div>
        <div class="form-label-group"><%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>
        <div class="form-actions"><%= f.button :submit, "Log In", class:"btn-lg-blue"%>
        </div>
      </div><% end %>
      <div class = "login-link-signup"><%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>


