<div class="container">
  <div><% @users.each do |user| %><%= link_to profile_path(user.id) do %><%= cl_image_tag user.profilephoto, height: 70, width: 70, crop: :fill, class:"avatar-profile" %><% end %><% end %>
  </div>
  <div class="row">
    <div class="col-md-6">
      <div class="card p-4 rounded mb-4">
        <h3 class="text-center">Events</h3>
        <div class="event-box-content"><% @hub.events.each do |event| %>
          <p><%= link_to event.title, event_path(event.id) %><%= event.description %>
          </p><% end %>
          <!-- Button trigger modal -->
        </div>
        <button id="create-event-btn" type="button" class="btn-lg-white" data-toggle="modal" data-target="#exampleModal">
          Create Event
        </button>
        <span id="form-to-render" data-to-render="<%= @failed %>">
        </span>
        <!-- Modal -->
        <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
          <div class="modal-dialog" role="document">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Create an event</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
              <div class="modal-body">
                <h3 class="text-center">Create an Event</h3><%= simple_form_for [@hub, @event] do |f| %><%= f.input :title %><%= f.input :description %><%= f.input :address %><%= f.input :price %><%= f.input :start_time, html5: true %><%= f.input :end_time, html5: true %><%= f.input :capacity, inline_label: 'Yes, remember me' %><%= f.button :submit, input_html: { class: 'btn-md-blue' } %><% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-6">
      <div class="card p-4 rounded mb-4">
        <h3 class="text-center">Studios</h3>
        <nav>
          <div class="nav nav-tabs" id="nav-tab" role="tablist">
            <a class="nav-item nav-link active" id="nav-home-tab" data-toggle="tab" href="#nav-home" role="tab" aria-controls="nav-home" aria-selected="true">List</a>
            <a class="nav-item nav-link" id="nav-profile-tab" data-toggle="tab" href="#nav-profile" role="tab" aria-controls="nav-profile" aria-selected="false">Map</a>
          </div>
        </nav>
        <div class="tab-content" id="nav-tabContent">
          <div class="tab-pane fade show active studio-box-content" id="nav-home" role="tabpanel" aria-labelledby="nav-home-tab"><% @studios.each do |studio| %>
            <h5><%= studio.name %>
            </h5>
            <p><%= studio.address %><%= studio.website %><%= studio.email %><%= studio.phone_number %>
            </p><% end %>
          </div>
          <div class="tab-pane fade" id="nav-profile" role="tabpanel" aria-labelledby="nav-profile-tab">
            <div id="map" style="width: 100%; height: 507px;" data-markers="<%= @markers.to_json %>" data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


<%= javascript_pack_tag 'map.js' %>

