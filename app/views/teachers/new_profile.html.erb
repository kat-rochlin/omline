<div class="teacher-container">
  <div class="card card-signin p-5">
    <%= simple_form_for :teacher, url: save_teacher_profile_path, method: :post do |f| %>

      <%= f.input :certifications, collection: Certification.all, as: :select, input_html: {class:'js-example-basic-multiple', multiple: true} %> <br>

      <hr>
      <%= f.input :styles, collection: TeachingStyle.all, as: :select, input_html: {class:'js-example-basic-multiple', multiple: true} %> <br>

      <hr>
      <%= f.input :languages, collection: Language.all, as: :select, input_html: {class:'js-example-basic-multiple', multiple: true} %> <br>

      <hr>
      <div id="experience-content">
        <div class="form-group string required teacher_studio_name">
          <label class="string required" for="teacher_studio_name">Studio name <abbr title="required">*</abbr></label>
          <input class="form-control string required" type="text" name="experience[studio_name][0]" id="teacher_studio_name">
        </div>
        <div class="form-group string required teacher_location">
          <label class="string required" for="teacher_location">Location <abbr title="required">*</abbr></label>
          <input class="form-control string required" type="text" name="experience[location][0]" id="teacher_location">
        </div>
        <div class="form-group string required teacher_description">
          <label class="string required" for="teacher_description">Description <abbr title="required">*</abbr></label>
          <input class="form-control string required" type="text" name="experience[description][0]" id="teacher_description">
        </div>
        <div class="form-group date required teacher_start_date">
          <label class="date required" for="teacher_start_date">Start date <abbr title="required">*</abbr></label>
          <div class="d-flex flex-row justify-content-between align-items-center">
            <input class="form-control mx-1 date required" type="date" name="experience[start_date][0]" id="teacher_start_date">
          </div>
        </div>
        <div class="form-group date required teacher_end_date">
          <label class="date required" for="teacher_end_date">End date <abbr title="required">*</abbr></label>
          <div class="d-flex flex-row justify-content-between align-items-center">
            <input class="form-control mx-1 date required" type="date" name="experience[end_date][0]" id="teacher_end_date">
          </div>
        </div>
      </div>
      <button id="add-experience" class="btn-md-blue">Add more</button>
      <div class="justify-content-center text-center mx-auto">
        <%= f.button :submit, "Save", class: "btn-md-blue justify-content-center text-center mx-auto" %>
      </div>
    <% end %>
  </div>
</div>
